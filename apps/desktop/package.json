{
  "name": "@usage-app/desktop",
  "version": "1.0.0",
  "description": "Desktop app for monitoring API usage across Claude, Codex, and Cursor",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "typecheck": "tsc --noEmit",
    "package": "NODE_OPTIONS='--max-old-space-size=16384' electron-builder --config electron-builder.config.ts",
    "package:mac": "pnpm run build && pnpm run package:mac:x64 && pnpm run package:mac:arm64",
    "package:mac:x64": "NODE_OPTIONS='--max-old-space-size=16384' electron-builder --mac --x64 --config electron-builder.config.ts",
    "package:mac:arm64": "NODE_OPTIONS='--max-old-space-size=16384' electron-builder --mac --arm64 --config electron-builder.config.ts",
    "package:win": "pnpm run build && NODE_OPTIONS='--max-old-space-size=16384' electron-builder --win --x64 --config electron-builder.config.ts",
    "package:linux": "pnpm run build && NODE_OPTIONS='--max-old-space-size=16384' electron-builder --linux --x64 --config electron-builder.config.ts"
  },
  "keywords": [
    "electron",
    "vite",
    "usage",
    "api-monitoring"
  ],
  "author": "Jacobo Ganon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JacoboGanon/usage-app.git"
  },
  "type": "module",
  "packageManager": "pnpm@10.28.1",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "autoprefixer": "^10.4.23",
    "electron": "^40.0.0",
    "electron-builder": "^26.0.0",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "electron-updater": "^6.3.9",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "recharts": "^3.7.0"
  }
}
