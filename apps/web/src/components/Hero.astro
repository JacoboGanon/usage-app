---
import { Icon } from 'astro-icon/components'
---

<section class="relative min-h-screen flex items-center justify-center px-6 py-24 overflow-hidden">
  <!-- Dramatic hero glow -->
  <div class="absolute top-1/3 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[600px] bg-gradient-radial from-accent-primary/10 via-accent-claude/5 to-transparent rounded-full blur-[100px] opacity-60"></div>

  <div class="max-w-5xl mx-auto text-center relative z-10">
    <!-- Status badge with subtle animation -->
    <div class="inline-flex items-center gap-3 mb-12 opacity-0 animate-fade-up">
      <div class="badge rounded-sm backdrop-blur-sm">
        <span class="live-indicator"></span>
        <span class="font-mono text-xs tracking-[0.15em] font-medium">MONITORING ACTIVE</span>
      </div>
    </div>

    <!-- Main headline - larger, more dramatic -->
    <h1 class="mb-8 opacity-0 animate-fade-up stagger-1">
      <span class="block text-6xl md:text-8xl lg:text-9xl font-bold font-display tracking-tight">
        <span class="gradient-text">Usage</span>
      </span>
      <span class="block text-5xl md:text-7xl lg:text-8xl font-bold font-display tracking-tight text-text-primary mt-2">
        Console<span class="cursor-blink"></span>
      </span>
    </h1>

    <!-- Tagline - refined -->
    <p class="text-lg md:text-xl text-text-secondary max-w-xl mx-auto mb-6 opacity-0 animate-fade-up stagger-2 leading-relaxed">
      Monitor API usage across all your AI coding tools
    </p>

    <!-- Provider badges - more refined with subtle glow -->
    <div class="flex flex-wrap justify-center gap-3 mb-14 opacity-0 animate-fade-up stagger-3">
      <span class="group inline-flex items-center gap-2.5 px-5 py-2.5 bg-claude-subtle/50 border border-claude/20 rounded-sm font-mono text-sm text-claude hover:border-claude/40 hover:bg-claude-subtle transition-all duration-300 cursor-default">
        <Icon name="lucide:sparkles" class="w-4 h-4 group-hover:scale-110 transition-transform" />
        Claude
      </span>
      <span class="group inline-flex items-center gap-2.5 px-5 py-2.5 bg-codex-subtle/50 border border-codex/20 rounded-sm font-mono text-sm text-codex hover:border-codex/40 hover:bg-codex-subtle transition-all duration-300 cursor-default">
        <Icon name="lucide:terminal" class="w-4 h-4 group-hover:scale-110 transition-transform" />
        ChatGPT / Codex
      </span>
      <span class="group inline-flex items-center gap-2.5 px-5 py-2.5 bg-cursor-subtle/50 border border-cursor/20 rounded-sm font-mono text-sm text-cursor hover:border-cursor/40 hover:bg-cursor-subtle transition-all duration-300 cursor-default">
        <Icon name="lucide:mouse-pointer-2" class="w-4 h-4 group-hover:scale-110 transition-transform" />
        Cursor
      </span>
    </div>

    <!-- CTA buttons - more prominent -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-20 opacity-0 animate-fade-up stagger-4">
      <a href="#download" class="btn-primary rounded-sm text-base">
        <Icon name="lucide:download" class="w-5 h-5" />
        Download Free
      </a>
      <a href="https://github.com/jacobo/usage-app" target="_blank" rel="noopener" class="btn-secondary rounded-sm text-base">
        <Icon name="simple-icons:github" class="w-5 h-5" />
        View Source
      </a>
    </div>

    <!-- Stats preview - more impactful with glowing cards -->
    <div class="relative opacity-0 animate-fade-up stagger-5">
      <!-- Subtle connecting line -->
      <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full max-w-md h-px bg-gradient-to-r from-transparent via-white/5 to-transparent"></div>

      <div class="grid grid-cols-3 gap-4 md:gap-6 max-w-2xl mx-auto">
        <!-- Claude stat -->
        <div class="terminal-card p-5 md:p-6 rounded-sm text-center group">
          <div class="flex items-center justify-center gap-2 mb-3">
            <Icon name="lucide:sparkles" class="w-4 h-4 text-claude opacity-60" />
          </div>
          <div class="text-3xl md:text-4xl font-bold font-mono text-claude mb-1 tracking-tight">$47</div>
          <div class="text-[10px] md:text-xs text-text-muted uppercase tracking-[0.15em] font-medium">Claude</div>
          <div class="mt-3 h-1 bg-white/5 rounded-full overflow-hidden">
            <div class="h-full w-[47%] bg-gradient-to-r from-claude/60 to-claude rounded-full"></div>
          </div>
        </div>

        <!-- Codex stat -->
        <div class="terminal-card p-5 md:p-6 rounded-sm text-center group">
          <div class="flex items-center justify-center gap-2 mb-3">
            <Icon name="lucide:terminal" class="w-4 h-4 text-codex opacity-60" />
          </div>
          <div class="text-3xl md:text-4xl font-bold font-mono text-codex mb-1 tracking-tight">245</div>
          <div class="text-[10px] md:text-xs text-text-muted uppercase tracking-[0.15em] font-medium">Requests</div>
          <div class="mt-3 h-1 bg-white/5 rounded-full overflow-hidden">
            <div class="h-full w-[65%] bg-gradient-to-r from-codex/60 to-codex rounded-full"></div>
          </div>
        </div>

        <!-- Cursor stat -->
        <div class="terminal-card p-5 md:p-6 rounded-sm text-center group">
          <div class="flex items-center justify-center gap-2 mb-3">
            <Icon name="lucide:mouse-pointer-2" class="w-4 h-4 text-cursor opacity-60" />
          </div>
          <div class="text-3xl md:text-4xl font-bold font-mono text-cursor mb-1 tracking-tight">89%</div>
          <div class="text-[10px] md:text-xs text-text-muted uppercase tracking-[0.15em] font-medium">Cursor</div>
          <div class="mt-3 h-1 bg-white/5 rounded-full overflow-hidden">
            <div class="h-full w-[89%] bg-gradient-to-r from-cursor/60 to-cursor rounded-full"></div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-12 left-1/2 -translate-x-1/2 opacity-0 animate-fade-up stagger-6">
      <a href="#features" class="flex flex-col items-center gap-3 text-text-muted hover:text-text-secondary transition-colors group">
        <span class="text-[10px] font-mono uppercase tracking-[0.2em]">Explore</span>
        <div class="w-6 h-10 border border-white/10 rounded-full flex items-start justify-center p-2 group-hover:border-white/20 transition-colors">
          <div class="w-1 h-2 bg-text-muted rounded-full animate-bounce group-hover:bg-text-secondary transition-colors"></div>
        </div>
      </a>
    </div>
  </div>
</section>
