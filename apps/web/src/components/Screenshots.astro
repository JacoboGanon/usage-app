<section class="py-24 px-6 relative overflow-hidden">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-4xl font-bold mb-4">
        <span class="gradient-text">See It In Action</span>
      </h2>
      <p class="text-slate-400 text-lg">
        A clean, focused interface that shows exactly what you need.
      </p>
    </div>

    <!-- Screenshot placeholder -->
    <div class="relative">
      <!-- Glow effect -->
      <div class="absolute -inset-4 bg-gradient-to-r from-accent-1/20 via-accent-2/20 to-accent-3/20 rounded-3xl blur-2xl opacity-50"></div>

      <!-- Screenshot container -->
      <div class="relative glass-card p-2 animate-float">
        <div class="bg-bg-primary rounded-2xl overflow-hidden border border-white/5">
          <!-- Window header -->
          <div class="flex items-center gap-2 px-4 py-3 bg-black/20 border-b border-white/5">
            <div class="flex gap-2">
              <div class="w-3 h-3 rounded-full bg-red-500/80"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-500/80"></div>
              <div class="w-3 h-3 rounded-full bg-green-500/80"></div>
            </div>
            <span class="text-sm text-slate-500 ml-4 font-mono">Usage Console</span>
          </div>

          <!-- App preview mockup -->
          <div class="p-8 min-h-[400px] flex flex-col gap-6">
            <!-- Stats row mockup -->
            <div class="grid grid-cols-3 gap-4">
              <div class="bg-white/5 rounded-xl p-4 border border-white/5">
                <div class="text-sm text-slate-400 mb-1">Claude Usage</div>
                <div class="text-2xl font-bold gradient-text">$47.23</div>
                <div class="text-xs text-slate-500 mt-1">of $100 limit</div>
              </div>
              <div class="bg-white/5 rounded-xl p-4 border border-emerald-500/20">
                <div class="text-sm text-slate-400 mb-1">ChatGPT / Codex</div>
                <div class="text-2xl font-bold text-emerald-400">245</div>
                <div class="text-xs text-slate-500 mt-1">requests today</div>
              </div>
              <div class="bg-white/5 rounded-xl p-4 border border-orange-500/20">
                <div class="text-sm text-slate-400 mb-1">Cursor</div>
                <div class="text-2xl font-bold text-orange-400">89%</div>
                <div class="text-xs text-slate-500 mt-1">premium used</div>
              </div>
            </div>

            <!-- Countdown mockup -->
            <div class="bg-white/5 rounded-xl p-4 border border-white/5">
              <div class="flex items-center justify-between">
                <div class="text-sm text-slate-400">Reset in</div>
                <div class="font-mono text-accent-1 text-lg">6d 14h 23m 45s</div>
              </div>
              <div class="mt-2 h-2 bg-white/5 rounded-full overflow-hidden">
                <div class="h-full w-3/4 bg-gradient-to-r from-accent-1 to-accent-2 rounded-full"></div>
              </div>
            </div>

            <p class="text-center text-slate-500 text-sm">
              Screenshot placeholder - actual app screenshot goes here
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
