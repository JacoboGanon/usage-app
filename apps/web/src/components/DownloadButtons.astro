---
import { Icon } from 'astro-icon/components'

const downloads = [
  {
    platform: 'macOS',
    icon: 'simple-icons:apple',
    label: 'Download for macOS',
    sublabel: 'Universal (Intel + Apple Silicon)',
    href: 'https://github.com/jacobo/usage-app/releases/latest',
    primary: true
  },
  {
    platform: 'Windows',
    icon: 'simple-icons:windows',
    label: 'Download for Windows',
    sublabel: 'Windows 10/11 (64-bit)',
    href: 'https://github.com/jacobo/usage-app/releases/latest',
    primary: false
  },
  {
    platform: 'Linux',
    icon: 'simple-icons:linux',
    label: 'Download for Linux',
    sublabel: 'AppImage, .deb, .rpm',
    href: 'https://github.com/jacobo/usage-app/releases/latest',
    primary: false
  }
]
---

<section id="download" class="py-32 px-6 relative overflow-hidden">
  <!-- Background gradient -->
  <div class="absolute inset-0">
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[500px] bg-gradient-radial from-accent-primary/6 via-accent-claude/3 to-transparent rounded-full blur-[100px]"></div>
  </div>

  <div class="max-w-5xl mx-auto relative z-10">
    <!-- Section header -->
    <div class="text-center mb-16">
      <div class="inline-flex items-center gap-2.5 px-4 py-2 bg-surface/50 backdrop-blur-sm border border-white/5 rounded-sm mb-8 font-mono text-xs text-text-muted uppercase tracking-[0.15em]">
        <Icon name="lucide:download" class="w-3.5 h-3.5" />
        Download
      </div>
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold font-display mb-6 tracking-tight">
        <span class="gradient-text">Get started now</span>
      </h2>
      <p class="text-lg text-text-secondary max-w-xl mx-auto leading-relaxed">
        Free and open source. Available for all major platforms.
      </p>
    </div>

    <!-- Download cards -->
    <div class="grid md:grid-cols-3 gap-4 lg:gap-6 mb-16">
      {downloads.map((download, index) => (
        <a
          href={download.href}
          target="_blank"
          rel="noopener"
          class={`download-card ${download.primary ? 'primary' : ''} p-8 lg:p-10 rounded-lg text-center group cursor-pointer relative`}
          style={`animation: fade-up 0.8s cubic-bezier(0.16, 1, 0.3, 1) ${0.1 * index}s forwards; opacity: 0;`}
        >
          {/* Platform icon */}
          <div class="relative mb-8">
            <div class={`w-20 h-20 mx-auto rounded-xl ${download.primary ? 'bg-accent-primary/10 border border-accent-primary/20' : 'bg-white/5 border border-white/5'} flex items-center justify-center transition-all duration-500 group-hover:scale-110 group-hover:border-white/20`}>
              <Icon
                name={download.icon}
                class={`w-10 h-10 ${download.primary ? 'text-accent-primary' : 'text-text-secondary'} transition-colors duration-300 group-hover:text-text-primary`}
              />
            </div>
            {/* Glow effect on hover */}
            {download.primary && (
              <div class="absolute inset-0 rounded-xl bg-accent-primary/20 blur-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            )}
          </div>

          <h3 class="text-xl font-semibold text-text-primary font-display mb-2 tracking-tight group-hover:text-white transition-colors">
            {download.label}
          </h3>
          <p class="text-sm text-text-muted mb-6">{download.sublabel}</p>

          {download.primary && (
            <div class="inline-flex items-center gap-2 text-accent-primary text-sm font-mono mb-6 px-3 py-1.5 bg-accent-primary/10 rounded-sm border border-accent-primary/20">
              <Icon name="lucide:check-circle" class="w-4 h-4" />
              Recommended
            </div>
          )}

          <div class="flex items-center justify-center gap-2 text-text-muted group-hover:text-accent-primary transition-all duration-300">
            <span class="text-sm font-medium">Download</span>
            <Icon name="lucide:arrow-right" class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" />
          </div>

          {/* Bottom highlight line */}
          <div class={`absolute bottom-0 left-0 right-0 h-px ${download.primary ? 'bg-gradient-to-r from-transparent via-accent-primary/50 to-transparent' : 'bg-gradient-to-r from-transparent via-white/0 to-transparent group-hover:via-white/10'} transition-all duration-500`}></div>
        </a>
      ))}
    </div>

    <!-- GitHub link -->
    <div class="text-center">
      <p class="text-text-muted text-sm mb-5">
        All downloads are from GitHub Releases.
      </p>
      <a
        href="https://github.com/jacobo/usage-app/releases"
        target="_blank"
        rel="noopener"
        class="inline-flex items-center gap-3 text-text-secondary hover:text-text-primary transition-colors font-mono text-sm group px-5 py-3 bg-white/[0.02] border border-white/5 rounded-lg hover:border-white/10 hover:bg-white/[0.04]"
      >
        <Icon name="simple-icons:github" class="w-5 h-5" />
        <span>View source and verify checksums</span>
        <Icon name="lucide:external-link" class="w-4 h-4 opacity-50 group-hover:opacity-100 transition-opacity" />
      </a>
    </div>
  </div>
</section>
