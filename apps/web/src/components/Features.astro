---
import { Icon } from 'astro-icon/components'

const features = [
  {
    title: 'Claude Monitoring',
    description: 'Track Anthropic API spending with detailed breakdowns by modelâ€”Opus, Sonnet, and Haiku.',
    icon: 'lucide:sparkles',
    color: 'text-claude',
    bgColor: 'bg-claude/10',
    borderColor: 'border-claude/20',
    glowColor: 'rgba(168, 85, 247, 0.15)'
  },
  {
    title: 'ChatGPT & Codex',
    description: 'Monitor OpenAI usage including ChatGPT Pro and Codex CLI requests in real-time.',
    icon: 'lucide:terminal',
    color: 'text-codex',
    bgColor: 'bg-codex/10',
    borderColor: 'border-codex/20',
    glowColor: 'rgba(16, 185, 129, 0.15)'
  },
  {
    title: 'Cursor Tracking',
    description: 'Keep tabs on your Cursor AI IDE premium requests and fast request usage.',
    icon: 'lucide:mouse-pointer-2',
    color: 'text-cursor',
    bgColor: 'bg-cursor/10',
    borderColor: 'border-cursor/20',
    glowColor: 'rgba(245, 158, 11, 0.15)'
  },
  {
    title: 'Reset Countdown',
    description: 'Live countdown timers show exactly when your usage limits reset.',
    icon: 'lucide:timer',
    color: 'text-accent-primary',
    bgColor: 'bg-accent-primary/10',
    borderColor: 'border-accent-primary/20',
    glowColor: 'rgba(59, 130, 246, 0.15)'
  },
  {
    title: 'Auto-Refresh',
    description: 'Configurable polling keeps data fresh. Set your preferred interval.',
    icon: 'lucide:refresh-cw',
    color: 'text-accent-glow',
    bgColor: 'bg-accent-glow/10',
    borderColor: 'border-accent-glow/20',
    glowColor: 'rgba(96, 165, 250, 0.15)'
  },
  {
    title: 'Native Desktop',
    description: 'Fast, lightweight Electron app. Lives in your menubar. Always accessible.',
    icon: 'lucide:monitor',
    color: 'text-text-primary',
    bgColor: 'bg-white/5',
    borderColor: 'border-white/10',
    glowColor: 'rgba(255, 255, 255, 0.08)'
  }
]
---

<section id="features" class="py-32 px-6 relative">
  <!-- Subtle section glow -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[400px] bg-gradient-radial from-accent-primary/5 to-transparent rounded-full blur-[100px]"></div>

  <div class="max-w-6xl mx-auto relative z-10">
    <!-- Section header -->
    <div class="text-center mb-20">
      <div class="inline-flex items-center gap-2.5 px-4 py-2 bg-surface/50 backdrop-blur-sm border border-white/5 rounded-sm mb-8 font-mono text-xs text-text-muted uppercase tracking-[0.15em]">
        <Icon name="lucide:layers" class="w-3.5 h-3.5" />
        Features
      </div>
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold font-display mb-6 tracking-tight">
        <span class="gradient-text">Everything you need</span>
      </h2>
      <p class="text-lg text-text-secondary max-w-xl mx-auto leading-relaxed">
        One dashboard for all your AI coding tools. Stop switching between apps and tabs.
      </p>
    </div>

    <!-- Features grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-px bg-white/[0.02] rounded-sm overflow-hidden">
      {features.map((feature, index) => (
        <div
          class="feature-card p-8 lg:p-10 group"
          style={`animation: fade-up 0.8s cubic-bezier(0.16, 1, 0.3, 1) ${0.08 * index}s forwards; opacity: 0;`}
        >
          <!-- Icon with glow effect -->
          <div class="relative mb-8">
            <div
              class={`w-14 h-14 ${feature.bgColor} border ${feature.borderColor} rounded-sm flex items-center justify-center transition-all duration-500 group-hover:scale-110`}
              style={`box-shadow: 0 0 0 ${feature.glowColor}; transition: box-shadow 0.5s ease;`}
            >
              <Icon name={feature.icon} class={`w-6 h-6 ${feature.color} transition-transform duration-500`} />
            </div>
            <!-- Subtle glow on hover -->
            <div
              class="absolute inset-0 rounded-sm opacity-0 group-hover:opacity-100 transition-opacity duration-500 blur-xl"
              style={`background: ${feature.glowColor};`}
            ></div>
          </div>

          <h3 class="text-xl font-semibold mb-4 text-text-primary font-display tracking-tight group-hover:text-white transition-colors duration-300">
            {feature.title}
          </h3>
          <p class="text-text-secondary leading-relaxed text-[15px]">
            {feature.description}
          </p>

          <!-- Subtle bottom border accent on hover -->
          <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-white/0 to-transparent group-hover:via-white/10 transition-all duration-500"></div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Section divider -->
<div class="section-divider"></div>
