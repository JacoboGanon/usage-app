---
import { Icon } from 'astro-icon/components'

const links = [
  { label: 'GitHub', href: 'https://github.com/jacobo/usage-app', icon: 'simple-icons:github' },
  { label: 'Releases', href: 'https://github.com/jacobo/usage-app/releases', icon: 'lucide:package' },
  { label: 'Issues', href: 'https://github.com/jacobo/usage-app/issues', icon: 'lucide:circle-dot' }
]

const techStack = [
  { label: 'Astro', icon: 'simple-icons:astro' },
  { label: 'Tailwind', icon: 'simple-icons:tailwindcss' },
  { label: 'Electron', icon: 'simple-icons:electron' },
  { label: 'React', icon: 'simple-icons:react' }
]
---

<footer class="relative py-20 px-6 border-t border-white/5 bg-void/80 backdrop-blur-sm">
  <!-- Subtle top glow -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[400px] h-[200px] bg-gradient-radial from-accent-primary/5 to-transparent rounded-full blur-[80px] -translate-y-1/2"></div>

  <div class="max-w-6xl mx-auto relative z-10">
    <!-- Main footer content -->
    <div class="flex flex-col lg:flex-row items-center lg:items-start justify-between gap-12 lg:gap-8">
      <!-- Logo and brand -->
      <div class="flex flex-col items-center lg:items-start gap-4">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 bg-gradient-to-br from-accent-primary via-accent-claude to-accent-primary rounded-xl flex items-center justify-center shadow-lg shadow-accent-primary/20">
            <Icon name="lucide:activity" class="w-6 h-6 text-white" />
          </div>
          <div>
            <span class="font-display font-bold text-text-primary text-xl tracking-tight">Usage Console</span>
            <p class="text-xs text-text-muted font-mono mt-0.5">v1.0.0</p>
          </div>
        </div>
        <p class="text-sm text-text-muted max-w-xs text-center lg:text-left leading-relaxed">
          Monitor your AI coding tools in one beautiful dashboard.
        </p>
      </div>

      <!-- Navigation links -->
      <nav class="flex items-center gap-2">
        {links.map((link) => (
          <a
            href={link.href}
            target="_blank"
            rel="noopener"
            class="flex items-center gap-2.5 px-4 py-2.5 text-text-muted hover:text-text-primary transition-all text-sm group rounded-lg hover:bg-white/[0.03] border border-transparent hover:border-white/5"
          >
            <Icon name={link.icon} class="w-4 h-4 group-hover:text-accent-primary transition-colors" />
            <span>{link.label}</span>
          </a>
        ))}
      </nav>

      <!-- License badge -->
      <div class="flex items-center gap-3 px-5 py-3 bg-white/[0.02] border border-white/5 rounded-lg">
        <Icon name="lucide:scale" class="w-5 h-5 text-text-muted" />
        <div>
          <span class="text-sm text-text-secondary font-medium">MIT License</span>
          <p class="text-[10px] text-text-muted mt-0.5">Open Source</p>
        </div>
      </div>
    </div>

    <!-- Divider -->
    <div class="my-12 h-px bg-gradient-to-r from-transparent via-white/5 to-transparent"></div>

    <!-- Bottom bar -->
    <div class="flex flex-col md:flex-row items-center justify-between gap-6">
      <p class="text-text-muted text-sm flex items-center gap-2">
        Built with
        <Icon name="lucide:heart" class="w-4 h-4 text-red-500/80" />
        by developers, for developers
      </p>

      <!-- Tech stack -->
      <div class="flex items-center gap-1">
        <span class="text-[10px] text-text-muted uppercase tracking-wider mr-3">Built with</span>
        {techStack.map((tech) => (
          <div class="flex items-center gap-1.5 px-3 py-1.5 text-text-muted hover:text-text-secondary transition-colors rounded-md hover:bg-white/[0.02]" title={tech.label}>
            <Icon name={tech.icon} class="w-4 h-4" />
            <span class="text-xs hidden sm:inline">{tech.label}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</footer>
